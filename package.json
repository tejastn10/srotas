{
	"name": "srotas",
	"version": "1.1.1",
	"type": "module",
	"main": "dist/srotas.js",
	"types": "dist/types/index.d.ts",
	"sideEffects": false,
	"description": "A utility package providing event handler functions like debounce and throttle for efficient function execution. Built with TypeScript and optimized for React projects.",
	"repository": {
		"type": "git",
		"url": "https://github.com/tejastn10/srotas.git"
	},
	"scripts": {
		"dev": "vite",
		"test": "vitest --run",
		"test:watch": "vitest --watch",
		"build": "tsc -b && vite build",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepare": "husky",
		"preview": "vite preview"
	},
	"lint-staged": {
		"*.{js,ts,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "npm@11.6.1",
	"dependencies": {
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"vite-plugin-dts": "^4.5.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^3.2.4",
		"dedent": "^1.7.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.3",
		"typescript": "^5.9.3",
		"vite": "^7.1.7",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"keywords": [
		"vite",
		"react",
		"typescript",
		"biomejs",
		"husky",
		"lint-staged"
	],
	"files": [
		"dist",
		"README.md",
		"LICENSE.md"
	],
	"license": "MIT"
}
