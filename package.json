{
	"name": "srotas",
	"version": "1.0.2",
	"type": "module",
	"main": "dist/srotas.js",
	"types": "dist/types/index.d.ts",
	"sideEffects": false,
	"description": "A utility package providing event handler functions like debounce and throttle for efficient function execution. Built with TypeScript and optimized for React projects.",
	"repository": {
		"type": "git",
		"url": "https://github.com/tejastn10/srotas.git"
	},
	"scripts": {
		"dev": "vite",
		"test": "vitest --run",
		"test:watch": "vitest --watch",
		"build": "tsc -b && vite build",
		"lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
		"format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
		"prepare": "husky",
		"preview": "vite preview"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "npm@10.9.0",
	"dependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"vite-plugin-dts": "^4.5.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/compat": "^1.3.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.29.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@typescript-eslint/eslint-plugin": "^8.34.1",
		"@typescript-eslint/parser": "^8.34.1",
		"@vitejs/plugin-react": "^4.5.2",
		"@vitest/coverage-v8": "^3.2.4",
		"dedent": "^1.6.0",
		"eslint": "^9.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"jest": "^30.0.2",
		"lint-staged": "^16.1.2",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"keywords": [
		"vite",
		"react",
		"typescript",
		"eslint",
		"husky",
		"lint-staged",
		"prettier"
	],
	"files": [
		"dist",
		"README.md",
		"LICENSE.md"
	],
	"license": "MIT"
}
